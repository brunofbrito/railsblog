<% if signed_in? %>
  <div class="admin-top">
    <div class="admin-links">
      <%= link_to 'Add a post', new_post_path %>
      <%= link_to 'Blog Settings', settings_path %>
    </div>
    <div class="user-links">
      <%= link_to image_tag(current_user.avatar.url, :alt => 'User avatar'), edit_user_path(current_user), class:"user-avatar" %>
      <p><%= link_to current_user.name, edit_user_path(current_user), class:"user-name" %></p>
      <%= link_to 'Sign out', sign_out_path, method: :delete %>
    </div>
  </div>   
    <% else %>
    <% end %>