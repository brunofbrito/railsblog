<%= render "layouts/admintop" %>
<%= render "layouts/navtop" %>

<div class="wrapper">
  <div class="main-content">
    <div class="form">
      <p><i class="fa fa-user"></i> User Settings</p>
      <%= form_for @user do |form| %>
        <%= render partial: '/users/form', object: form %>

        <%= form.label :name %>
        <%= form.text_field :name, type: 'text' %>

        <% if current_user.avatar.url.empty? == false %>
          <%= form.label("Current avatar")  %>
          <img src="<%= current_user.avatar.url %>">
        <% end %>

        <%= form.label(:avatar, :"Upload a new avatar")  %>
        <%= form.file_field :avatar %> <br>

        <%= form.submit 'Update' %>
      
      <% end %>
    </div>
  </div>
</div>
</div>
<%= render "layouts/footer" %>